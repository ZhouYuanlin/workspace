<%@ page language="java" pageEncoding="UTF-8"%>
<%@ taglib uri="http://www.uufocus.com/taglib" prefix="s"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
		    <h3>会议室详情</h3>
		  </div>
		  <div class="modal-body" style="height:500px;">
		    <div class="form">
		        <form action="#" class="form-horizontal">
		          <div class="form-body">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">会议室名称：</label>
								<div class="controls">
									<p class="c-text">${meeting.name}</p>
								</div>
							</div>
						</div>
						
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">会议室地址：</label>
								<div class="controls">
									<p class="c-text">${meeting.address}</p>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">会议室布局图：</label>
								<div class="controls">
									<p class="c-text"><img width=240px height=160px src="${meeting.imgurl}"/></p>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">最大使用人数：</label>
								<div class="controls">
									<p class="c-text">${meeting.upperLimit}</p>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">面积：</label>
								<div class="controls">
									<p class="c-text">${meeting.area}</p>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
					<div class="col-md-12">
							<div class="form-group">
								<label class="control-label">会议室描述：</label>
								<div class="controls">
									<p class="c-text">${meeting.description}</p>
								</div>
							</div>
						</div>
					</div>
		          </div>
		        </form>
		    </div>
		  </div>
