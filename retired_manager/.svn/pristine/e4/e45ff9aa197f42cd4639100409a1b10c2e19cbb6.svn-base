<%@ page language="java" pageEncoding="UTF-8"%>
<%@ taglib uri="http://www.uufocus.com/taglib" prefix="s"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
		    <h3>活动详情</h3>
		  </div>
		  <div class="modal-body" style="height:500px;">
		    <div class="form">
		        <form action="#" class="form-horizontal">
		          <div class="form-body">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">活动名称：</label>
								<div class="controls">
									<p class="c-text">${meeting.activityName}</p>
								</div>
							</div>
						</div>
						
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">活动地点：</label>
								<div class="controls">
									<p class="c-text">${meeting.address}</p>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">开始时间：</label>
								<div class="controls">
									<p class="c-text">${meeting.startTime}</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">结束时间：</label>
								<div class="controls">
									<p class="c-text">${meeting.endTime}</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">负责人：</label>
								<div class="controls">
									<p class="c-text">${meeting.person}</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">电话：</label>
								<div class="controls">
									<p class="c-text">${meeting.tel}</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">车辆数量：</label>
								<div class="controls">
									<p class="c-text">${meeting.carNumber}</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">乘坐人数：</label>
								<div class="controls">
									<p class="c-text">${meeting.peopleNub}</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">申请结束时间：</label>
								<div class="controls">
									<p class="c-text">${meeting.addEndTime}</p>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">备注：</label>
								<div class="controls">
									<p class="c-text">${meeting.remarks}</p>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
								<div class="form-group">
									<label class="control-label">活动介绍：</label>
									<div class="controls">
										<p class="c-text">${meeting.introduction}</p>
									</div>
								</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label">活动图片：</label>
								<div class="controls">
								
									<p class="c-text"><c:if test="${meeting.imgurl != null}"><img  src="${meeting.imgurl}"/></c:if><c:if test="${meeting.imgurl == null}">无</c:if></p>
								</div>
							</div>
						</div>
					</div>
		          </div>
		        </form>
		    </div>
		  </div>
